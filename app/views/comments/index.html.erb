<%= turbo_frame_tag "main_frame" do %>

    <div class="row">
      <div class="col-6">
        <h3>Comments</h3>
      </div>
      <div class="col-6">
        <%= link_to "Back", posts_path, data: { turbo_frame: "main_frame" }, class:"btn btn-sm btn-danger float-right mx-3" %>
        <%= link_to "New Comment", new_post_comment_path(@post.id), data: { turbo_frame: dom_id(Comment.new) }, class:"btn btn-sm btn-primary float-right" %>
      </div>
    </div>
    <hr>

    <div>
      <p><strong>Post:</strong> <%= @post.post %></p>
      <p><strong>User:</strong> <%= @post.user.email %></p>
      <p><strong>Date:</strong> <%= @post.created_at %></p>
    </div>
    <hr>

    <%= turbo_frame_tag Comment.new %>

    <%= turbo_frame_tag "comments" do %>
      <% @post.comments.each do |comment| %>
        <%= render partial: "comment", locals: { comment: comment } %>
      <% end %>
    <% end %>

<% end %>