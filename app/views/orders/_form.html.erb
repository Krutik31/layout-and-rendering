<%= form_with model: order, url: product_orders_path do |form| %>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class:"form-control", placeholder:"Enter quantity" %>
  </div>

  <div class="form-group">
    Order Status: 
    <%= form.radio_button :order_status, "booked" %>
    <%= form.label :order_status_booked, "Booked" %>
    <%= form.radio_button :order_status, "cancelled" %>
    <%= form.label :order_status_cancelled, "Cancelled" %>
  </div>

  <%= form.hidden_field :product_id, value: productid %>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", products_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>