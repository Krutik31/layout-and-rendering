<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
    <% if user_signed_in? %>
      <br>
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th><h3>Actions</h3></th>
          </tr>
        </thead>
        <tbody>
            <% if (current_user.role == 'Admin') %>
              <tr>
                <td><%= link_to "Manage products", admin_products_path %></td>
              </tr>
              <tr>
                <td><%= link_to "All Orders", orders_path %></td>
              </tr>
            <% elsif %>
              <tr>
                <td><%= link_to "All Products", products_path %></td>
              </tr>
              <tr>
                <td><%= link_to "Your Orders", orders_path %></td>
              </tr>
            <% end %>
        </tbody>
      </table>

    <% else %>
      <br>
      <h2>Hello There,</h2><hr>
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th><h3>Actions</h3></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to "Sign up", new_user_registration_path %></td>
          </tr>
          <tr>
            <td><%= link_to "Sign in", new_user_session_path %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="col-3"></div>
</div>
