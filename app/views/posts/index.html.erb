<div class="container-fluid">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">

      <%= turbo_frame_tag "main_frame" do %>

        <div class="row">
          <div class="col-6">
            <h3>List of Posts</h3>
          </div>
          <div class="col-6">
            <%= link_to "New Post", new_post_path, data: { turbo_frame: dom_id(Post.new) }, class:"btn btn-sm btn-primary float-right" %>
          </div>
        </div>
        <hr>

        <%= turbo_frame_tag Post.new %>

        <%= turbo_frame_tag "posts" do %>
          <% @posts.each do |post| %>
            <%= render partial: "post", locals: { post: post } %>
          <% end %>
        <% end %>

      <% end %>

    </div>
    <div class="col-2"></div>
  </div>
</div>
