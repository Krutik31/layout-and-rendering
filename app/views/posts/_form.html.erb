<%= form_for post, multipart: true do |form| %>

  <div class="form-group">
    <%= form.label :post %>
    <%= form.text_area :post, class:"form-control", placeholder:"Write your post here...", rows:"6" %>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", posts_path, data: { turbo_frame: "main_frame" }, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>

  <hr>
<% end %>